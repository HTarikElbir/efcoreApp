@model IEnumerable<CourseRegistration>

<h2>Student List</h2>
<table class="table table-bordered">
    <thead>

        <tr>
            <th style="width:150px">@Html.DisplayNameFor(m => m.Id)</th>
            <th>@Html.DisplayNameFor(m => m.Student.Name)</th>
            <th>@Html.DisplayNameFor(m => m.Course.Name)</th>
            <th style="width:150px"></th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(m => item.Id)</td>
                <td>@Html.DisplayFor(m => item.Student.FullName)</td>
                <td>@Html.DisplayFor(m => item.Course.Name)</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-primary">Edit</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>

</table>
