@model IEnumerable<Course>

<h2>Courses</h2>
<a href="/Course/Create" class="btn btn-primary">Add Course</a>
<hr />

<table class="table table-bordered">
    <thead>
        <tr>
            <th style="width:150px">@Html.DisplayNameFor(m => m.Id)</th>
            <th>@Html.DisplayNameFor(m => m.Name)</th>
            <th>@Html.DisplayNameFor(m => m.Teacher.FullName)</th>
            <th style="width:150px">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var course in Model)
        {
            <tr>
                <td>@Html.DisplayFor(c => course.Id)</td>
                <td>@Html.DisplayFor(c => course.Name)</td>
                <td>@Html.DisplayFor(c => course.Teacher.FullName)</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@course.Id" class="btn btn-sm btn-primary">Edit</a>
                    <a asp-action="Delete" asp-route-id="@course.Id" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
